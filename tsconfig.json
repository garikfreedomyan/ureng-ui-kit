{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react",
    "allowJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./lib",

    "baseUrl": "./src",
    "paths": {
      "components": ["components"],
      "components/*": ["components/*"],
      "hooks": ["hooks"],
      "hooks/*": ["hooks/*"],
      "types": ["types"],
      "types/*": ["types/*"],
      "utils": ["utils"],
      "utils/*": ["utils/*"]
    },
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "src/**/*.test.tsx", "src/**/*.stories.tsx"]
}
